<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smart.liyinwang.jn.smarthome.FragmentBedroom">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/bedroom_temperature_image_view"
        android:layout_gravity="left|top"
        android:src="@mipmap/temperature"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bedroom_temperature_control_bar"
        android:layout_gravity="center|right|top"
        android:layout_marginTop="125dp"
        android:layout_marginRight="40dp"
        android:max="13"
        android:indeterminate="false"
        android:progress="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 â„ƒ"
        android:id="@+id/bedroom_temperature_text_view"
        android:layout_gravity="center_horizontal|top"
        android:textSize="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="80dp"
        android:textColor="#A349A4"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/bedroom_humidity_image_view"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/humidity"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/bedroom_light_image_view"
        android:layout_gravity="left|bottom"
        android:src="@mipmap/brightness"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bedroom_light_control_bar"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="155dp"
        android:layout_marginRight="40dp"
        android:max="5"
        android:indeterminate="false"
        android:progress="1"
        android:layout_marginBottom="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dim"
        android:id="@+id/bedroom_light_text_view"
        android:layout_gravity="center_horizontal|bottom|right"
        android:textSize="32dp"
        android:layout_marginTop="100dp"
        android:textColor="#94BD15"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="50dp"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/toggleButton"
        android:layout_gravity="center"
        android:background="#00A2E8"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"/>

</FrameLayout>
